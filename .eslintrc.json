{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "off",
    "no-console": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "no-useless-escape": "off",
    "no-control-regex": "off",
    "no-useless-catch": "off",
    "no-prototype-builtins": "off",
    "no-undef": "off"
  }
}